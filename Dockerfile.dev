# Development Dockerfile with hot reload

FROM node:25-alpine

RUN corepack enable && corepack prepare pnpm@8 --activate

WORKDIR /app

# Install dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy source
COPY . .

# Generate Prisma Client
RUN pnpm prisma generate

EXPOSE 3000

CMD ["pnpm", "dev"]
