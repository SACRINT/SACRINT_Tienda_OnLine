# ====================================
# DATABASE - PostgreSQL (Neon)
# ====================================
DATABASE_URL="postgresql://user:password@host.neon.tech/tienda_online?sslmode=require"

# ====================================
# NEXTAUTH.JS - Autenticación
# ====================================
NEXTAUTH_SECRET="generate_with_openssl_rand_base64_32"
NEXTAUTH_URL="http://localhost:3000"

# ====================================
# GOOGLE OAUTH
# ====================================
GOOGLE_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# ====================================
# STRIPE - Pagos
# ====================================
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_STRIPE_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# ====================================
# MERCADO PAGO - Latin American Payments
# ====================================
MERCADOPAGO_ACCESS_TOKEN="APP_USR-YOUR_MERCADOPAGO_ACCESS_TOKEN"
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY="APP_USR-YOUR_MERCADOPAGO_PUBLIC_KEY"

# ====================================
# RESEND - Email Transaccional
# ====================================
RESEND_API_KEY="re_YOUR_RESEND_API_KEY"

# ====================================
# REDIS - Caching (Optional)
# ====================================
# Redis URL for caching (optional, falls back to memory cache if not set)
# Example: redis://localhost:6379
# Example (Upstash): rediss://:password@host.upstash.io:port
REDIS_URL="redis://localhost:6379"

# ====================================
# APP CONFIGURATION
# ====================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_STRIPE_PUBLISHABLE_KEY"

# ====================================
# LOGGING & MONITORING
# ====================================
# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN="https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID"

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"

# ====================================
# FEATURE FLAGS - Optional Features
# ✅ P1.10: Feature flag documentation
# ====================================

# Analytics - Enable Google Analytics tracking
# Default: true in production if NEXT_PUBLIC_GA_ID is set, false otherwise
ENABLE_ANALYTICS="false"
NEXT_PUBLIC_GA_ID=""

# Push Notifications - Enable push notification features
# Default: false (requires additional setup)
ENABLE_PUSH_NOTIFICATIONS="false"

# Maintenance Mode - Put site in maintenance mode
# When true, displays maintenance page to all users
# Default: false
MAINTENANCE_MODE="false"

# Debug Mode - Enable detailed logging and error messages
# Automatically enabled in development, can be forced in production
# Default: true in dev, false in production
DEBUG="false"
