# Production Environment Configuration
# Copy this file to .env.production and fill with actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true"

# ============================================
# Authentication
# ============================================
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# ============================================
# Payment Processing (Stripe)
# ============================================
# IMPORTANT: Use LIVE keys for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# Email Service (Resend)
# ============================================
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ============================================
# Application Configuration
# ============================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXT_PUBLIC_API_URL="https://yourdomain.com/api"

# ============================================
# Error Tracking (Sentry)
# ============================================
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..."
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# ============================================
# Analytics
# ============================================
NEXT_PUBLIC_GOOGLE_ANALYTICS="G-XXXXXXXXXX"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ============================================
# Storage (Optional)
# ============================================
# AWS S3 (for product images, avatars, etc)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="your-bucket-name"

# Cloudinary (alternative to S3)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# Security
# ============================================
# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# CORS
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ============================================
# Feature Flags
# ============================================
FEATURE_GUEST_CHECKOUT="true"
FEATURE_SOCIAL_LOGIN="true"
FEATURE_PRODUCT_REVIEWS="true"
FEATURE_WISHLISTS="false"
FEATURE_LOYALTY_PROGRAM="false"

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL="error"
ENABLE_QUERY_LOGGING="false"
ENABLE_PERFORMANCE_MONITORING="true"

# Uptime Monitoring
UPTIME_ROBOT_API_KEY="your-api-key"

# ============================================
# Shipping Integration (Optional)
# ============================================
SKYDROPX_API_KEY="your-skydropx-api-key"
SKYDROPX_ENVIRONMENT="production"

# ============================================
# Payment Methods (Mexico)
# ============================================
# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN="APP-..."
MERCADO_PAGO_PUBLIC_KEY="APP_USR-..."

# OXXO/SPEI via Stripe
ENABLE_OXXO_PAYMENTS="true"
ENABLE_SPEI_PAYMENTS="true"

# ============================================
# Tax Configuration
# ============================================
TAX_RATE_IVA="0.16"
TAX_INCLUDED_IN_PRICES="false"

# ============================================
# Cache Configuration
# ============================================
REDIS_URL="redis://default:password@host:6379"
CACHE_TTL_DEFAULT="3600"
CACHE_TTL_PRODUCTS="7200"
CACHE_TTL_CATEGORIES="86400"

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL="admin@yourdomain.com"
SUPPORT_EMAIL="support@yourdomain.com"

# ============================================
# Multi-tenant Configuration
# ============================================
DEFAULT_TENANT_ID="your-default-tenant-id"
MULTI_TENANT_MODE="true"

# ============================================
# Backup Configuration
# ============================================
BACKUP_S3_BUCKET="your-backup-bucket"
BACKUP_RETENTION_DAYS="30"

# ============================================
# Performance
# ============================================
IMAGE_OPTIMIZATION_ENABLED="true"
IMAGE_QUALITY="85"
ENABLE_STATIC_OPTIMIZATION="true"

# ============================================
# IMPORTANT NOTES
# ============================================
# 1. NEVER commit .env.production with real values to git
# 2. Use Vercel Environment Variables for production deployment
# 3. Rotate NEXTAUTH_SECRET and API keys regularly
# 4. Use different keys for staging and production
# 5. Enable 2FA on all service accounts (Stripe, Resend, etc)
# 6. Monitor logs for exposed secrets
# 7. Use secret scanning tools (GitGuardian, TruffleHog)
